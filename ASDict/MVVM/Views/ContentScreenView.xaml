<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ASDict.MVVM.ViewModels"
             x:DataType="vm:DictionaryViewModel"
             x:Class="ASDict.MVVM.Views.ContentScreenView">
    <Shell.NavBarIsVisible>
        <OnIdiom x:TypeArguments="x:Boolean">
            <OnIdiom.Phone>false</OnIdiom.Phone>
            <OnIdiom.Tablet>false</OnIdiom.Tablet>
        </OnIdiom>
    </Shell.NavBarIsVisible>

    <Grid>
        <!--Menu Page-->
        <Grid x:Name="MenuContainer" BackgroundColor="#333A57" RowSpacing="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!--Bookmark-->
            <Border StrokeThickness="0" BackgroundColor="#333A57" Grid.Row="0">
                <Border.Shadow>
                    <Shadow Brush="#FAC4C7"
                            Offset="0, 8"
                            Radius="0"/>
                </Border.Shadow>
                <VerticalStackLayout >
                    <Grid ColumnDefinitions="*, *">
                        <VerticalStackLayout  Grid.Column="1" Padding="16,12, 0, 0">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="bookmark_Clicked" />
                            </VerticalStackLayout.GestureRecognizers>
                            <Grid ColumnDefinitions="auto, *, auto">
                                <Label 
                            Grid.Column="0"
                            Text="Bookmark"
                           FontSize="22"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           TextColor="White"
                           FontFamily="PatrickHand"/>
                                <Border 
                            Grid.Column="2"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
                        Background="#FAC4C7" 
                        Stroke="#333A57" 
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 60"
                        HeightRequest="50"
                        WidthRequest="50">
                                    <Image Source="Resources/Images/bookmark_icon.svg" Scale="0.5"/>
                                </Border>
                            </Grid>
                        </VerticalStackLayout>
                    </Grid>

                </VerticalStackLayout>
            </Border>
            
            <!--Help-->
            <Border StrokeThickness="0" BackgroundColor="#333A57" Grid.Row="1">
                <Border.Shadow>
                    <Shadow Brush="#FAC4C7"
                            Offset="0,8"
                            Radius="0"/>
                </Border.Shadow>
                <VerticalStackLayout>
                    <Grid ColumnDefinitions="*, *">
                        <VerticalStackLayout Padding="16,12, 0, 0" Grid.Column="1">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="help_Clicked" />
                            </VerticalStackLayout.GestureRecognizers>
                            <Grid ColumnDefinitions="auto, *, auto">
                                <Label 
                            Grid.Column="0"
                            Text="Help"
                           FontSize="22"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
                           TextColor="White"
                           FontFamily="PatrickHand"/>
                                <Border 
                            Grid.Column="2"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
                        Background="#FAC4C7" 
                        Stroke="#333A57" 
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 60"
                        HeightRequest="50"
                        WidthRequest="50">
                                    <Image Source="Resources/Images/help_icon.svg" Scale="0.5"/>
                                </Border>
                            </Grid>
                        </VerticalStackLayout>
                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!--Infor-->
            <Border StrokeThickness="0" BackgroundColor="#333A57" Grid.Row="2">
                <Border.Shadow>
                    <Shadow Brush="#FAC4C7"
                            Offset="0,8"
                            Radius="0"/>
                </Border.Shadow>
                <VerticalStackLayout>
                    <Grid ColumnDefinitions="*, *">
                        <VerticalStackLayout Padding="16,12, 0, 0" Grid.Column="1">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="infor_Clicked" />
                            </VerticalStackLayout.GestureRecognizers>
                            <Grid ColumnDefinitions="auto, *, auto">
                                <Label 
                            Grid.Column="0"
                            Text="Infor"
                           FontSize="22"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
                           TextColor="White"
                           FontFamily="PatrickHand"/>
                                <Border 
                            Grid.Column="2"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
                        Background="#FAC4C7" 
                        Stroke="#333A57" 
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 60"
                        HeightRequest="50"
                        WidthRequest="50">
                                    <Image Source="Resources/Images/information_icon.svg" Scale="0.5"/>
                                </Border>
                            </Grid>
                        </VerticalStackLayout>
                    </Grid>

                </VerticalStackLayout>
            </Border>

        </Grid>

    <Grid x:Name="ContentGrid" RowSpacing="24" >

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>

            <Image Source="Resources/Images/backgr.png" 
               Aspect="AspectFill"
               Grid.Column="0"
               Grid.RowSpan="3"/>
        <!--Header-->
        <VerticalStackLayout Padding="6">
            <Grid ColumnDefinitions="auto, *, auto">
                <!--App icon-->
                <Border 
            Padding="0"
            StrokeThickness="4" 
            StrokeShape="RoundRectangle 90"
            Background="white"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            HeightRequest="60"
            WidthRequest="60"
            Stroke="#333A57">
            <Border.Shadow>
                <Shadow Brush="#333A57"
                        Radius="0"
                        Offset="0,10"
                        Opacity="1"/>
            </Border.Shadow>
            <Image
                Source="Resources/Images/appiconsmall.svg" 
                Aspect="AspectFit" 
                BackgroundColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
                    
        </Border>

                <HorizontalStackLayout  Grid.Column="2">
                    <!--search icon-->
                    <Border  
            StrokeThickness="4" 
            StrokeShape="RoundRectangle 18.5"
            BackgroundColor="#333A57"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Stroke="#333A57"
            HeightRequest="60"
            WidthRequest="60">
            <Border.Shadow Margin="180,0,125,0">
                <Shadow Brush="#333A57"
                        Radius="0"
                        Offset="0,10"
                        Opacity="0.5"/>
            </Border.Shadow>
            <ImageButton x:Name="search"
                Source="Resources/Images/search_icon_white.svg" 
                Aspect="Center" 
                BackgroundColor="#333A57"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="search_Clicked"
/>
        </Border>

                    <!--star white icon-->
                    <Border  
                        StrokeThickness="4" 
                        StrokeShape="RoundRectangle 90"
                        BackgroundColor="white"
                        HorizontalOptions="End"
                        VerticalOptions="Start"
                        Stroke="#333A57"
                        HeightRequest="60"
                        WidthRequest="60">
                        <Border.Shadow Margin="241,0,65,0">
                            <Shadow 
                                Brush="#333A57"
                                Radius="0"
                                Offset="0,10"
                                Opacity="1"/>
                            </Border.Shadow>
                        <ImageButton 
                            x:Name="star_white"
                            Source="{Binding SourceFavorite}" 
                            Aspect="Center" 
                            Command="{Binding starClicked}"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>
                    </Border>

                    <!--Menu icon-->
                        <Grid>
                            <Border 
            StrokeThickness="4" 
            StrokeShape="RoundRectangle 90"
            Background="white"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            Stroke="#333A57"
                        HeightRequest="60"
            WidthRequest="60">
            <Border.Shadow>
                <Shadow Brush="#333A57"
                        Radius="0"
                        Offset="0,10"
                        Opacity="1"/>
            </Border.Shadow>

            <ImageButton x:Name="menu"
                Source="Resources/Images/menu_icon_blue.svg" 
                Aspect="Center" 
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="menu_Clicked"/>

        </Border>
                        </Grid>
                    </HorizontalStackLayout>
            </Grid>
        </VerticalStackLayout>

        <!--Content-->
            <Frame 
            Padding="12,45"
            Grid.Row="1"
            Grid.RowSpan="2"
            CornerRadius="20"
            BackgroundColor="#FEF2F2"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            BorderColor="#FEF2F2">

                <Grid>
                    <VerticalStackLayout>
                <!--Label result-->
                <Border 
                        Padding="6,12"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="StartAndExpand"
                        StrokeThickness="4"
                        StrokeShape="RoundRectangle 20"
                        Stroke="#333A57">
                    <Border.Shadow >
                        <Shadow Brush="#333A57"
                        Radius="0"
                        Offset="0,10"
                        Opacity="1"/>
                    </Border.Shadow>

                    <Label x:Name="resultLabel"
                        Padding="12"
                        Text="{Binding Word}"
                        FontSize="48"
                        FontFamily="PatrickHand"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>
                </Border>

                <!--Table result-->
                <Border
                    Margin="0, 24"
                    StrokeThickness="8"
                    HorizontalOptions="Fill"
                    VerticalOptions="FillAndExpand"
                    Stroke="#333A57"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="White">
                    <Frame Padding="0">
                        <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="90" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Background="#AEB1E4" ZIndex="1">
                            <HorizontalStackLayout Padding="16">
                                <!--Synonym-->
                                <Border HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    StrokeShape="RoundRectangle 20"
                                    StrokeThickness="0"
                                    Stroke="#333A57">
                                    <Border.Shadow>
                                        <Shadow Brush="Black"
                                            Radius="0"
                                            Offset="0,10"
                                            Opacity="1"/>
                                    </Border.Shadow>

                                    <Button x:Name="synonym"
                                        BackgroundColor="#F74B54"
                                        Text="Synonym"
                                        FontSize="20"
                                        TextColor="White"
                                        FontFamily="PatrickHand"
                                        Clicked="synonym_Clicked"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"/>
                            </Border>

                                <!--Antonym-->
                                <Border 
                                Margin="16,0"
                                HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    StrokeShape="RoundRectangle 20"
                                    StrokeThickness="0"
                                    Stroke="#333A57">
                                <Border.Shadow>
                                    <Shadow Brush="Black"
                                            Radius="0"
                                            Offset="0,10"
                                            Opacity="1"/>
                                </Border.Shadow>

                                <Button x:Name="antonym"
                                        BackgroundColor="#333A57"
                                        Text="Antonym"
                                        FontSize="20"
                                        TextColor="Gray"
                                        FontFamily="PatrickHand"
                                        Clicked="antonym_Clicked"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"/>
                            </Border>
                            </HorizontalStackLayout>
                        </Grid>


                            <Grid Grid.Row="1"   MaximumHeightRequest="700">
                                <Grid  ColumnDefinitions="*, *" Padding="32,16">
                                    
                                <VerticalStackLayout Grid.Column="0">
                                    <CollectionView ItemsSource="{Binding TempSynonymsCol1}">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                HorizontalOptions="Start" 
                                                Margin="0, 6"
                                                Padding="8,4"
                                                Stroke="#333A57"
                                                StrokeThickness="3">
                                                        <Grid ColumnSpacing="4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Image
                                                        Grid.Column="0"
                                                        Source="Resources/Images/text_icon.svg"
                                                        Aspect="AspectFit"
                                                        HorizontalOptions="Start"
                                                        VerticalOptions="Center"/>

                                                            <Label
                                                        Grid.Column="1"
                                                        Text="{Binding .}"
                                                        FontSize="20"
                                                        FontFamily="PatrickHand"
                                                        HorizontalOptions="End"
                                                        VerticalOptions="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>


                                </VerticalStackLayout>
                                    
                                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                                        <CollectionView ItemsSource="{Binding TempSynonymsCol2}">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                HorizontalOptions="Start"
                                                Margin="0, 6"
                                                Padding="8,4"
                                                Stroke="#333A57"
                                                StrokeThickness="3">
                                                        <Grid ColumnSpacing="4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Image
                                                        Grid.Column="0"
                                                        Source="Resources/Images/text_icon.svg"
                                                        Aspect="AspectFit"
                                                        HorizontalOptions="Start"
                                                        VerticalOptions="Center"/>

                                                            <Label
                                                        Grid.Column="1"
                                                        Text="{Binding .}"
                                                        FontSize="20"
                                                        FontFamily="PatrickHand"
                                                        HorizontalOptions="End"
                                                        VerticalOptions="Center"/>
                                                        </Grid>

                                                    </Border>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>    

                                    </VerticalStackLayout>
                                </Grid>
                            </Grid>
                    </Grid>
                    </Frame>
                </Border>

            </VerticalStackLayout>
                </Grid>
            </Frame>

        <!--Footer-->
        <Grid Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border  Grid.Column="0" Grid.ColumnSpan="3"          
            StrokeShape="RoundRectangle 20, 20, 0, 0"
            StrokeThickness="0">

                <Image  Source="Resources/Images/backgr.png" 
                       Aspect="AspectFill"
                        Scale="2"/>
            </Border>
            <Border  Grid.Column="0"
            StrokeThickness="4" 
            StrokeShape="RoundRectangle 90"
            Background="white"
            VerticalOptions="Center"
            HorizontalOptions="EndAndExpand"
            Stroke="#333A57">
            <Border.Shadow>
                <Shadow Brush="#333A57"
                        Radius="0"
                        Offset="0,10"
                        Opacity="1"/>
            </Border.Shadow>
                <ImageButton x:Name="house_icon"
                Source="Resources/Images/house_icon.svg" 
                Aspect="Center" 
                BackgroundColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="house_icon_Clicked"
                HeightRequest="45"
                WidthRequest="45"/>
            </Border>
            
            <Border Grid.Column="1" WidthRequest="4"
                    BackgroundColor="#333A57" StrokeThickness="0" Margin="8" />

            <Border  
            Grid.Column="2"
            StrokeThickness="4" 
            StrokeShape="RoundRectangle 90"
            Background="white"
            Grid.Row="3"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="StartAndExpand"
            Stroke="#333A57">
            <Border.Shadow Margin="255,70,65,-20">
                <Shadow Brush="#333A57"
                        Radius="0"
                        Offset="0,10"
                        Opacity="1"/>
            </Border.Shadow>
                <ImageButton x:Name="bookmark1"
                Source="Resources/Images/bookmark_icon.svg" 
                Aspect="Center" 
                BackgroundColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="bookmark1_Clicked"
                HeightRequest="45"
                WidthRequest="45"/>
            </Border>
        </Grid>
    </Grid>
    </Grid>
</ContentPage>
